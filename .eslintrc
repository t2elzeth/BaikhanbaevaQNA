{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "$": true
  },
  "settings": {
    "react": {
      "version": "^17.0.2"
    }
  },
  "rules": {
    "semi": [
      "error",
      "always"
//      "never"
    ]
  }
}
